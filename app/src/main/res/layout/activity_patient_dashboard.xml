<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientDashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Dashboard"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ChatActivity"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="231dp"
        android:text="View Messages"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/view_profile"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="238dp"
        android:text="View Profile"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/view_doc"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="228dp"
        android:text="View Doctors"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/Schedule_appointment"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="44dp"
        android:text="Schedule Appointment"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/view_appointment"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="30dp"
        android:text="View Appointments"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/contact_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="33dp"
        android:text="Contact Support"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/log_out"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="582dp"
        android:text="Log Out"
        android:background="@color/colorAccent"/>


</RelativeLayout>


