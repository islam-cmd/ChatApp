package com.example.chatapp;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.ImageButton;

import androidx.appcompat.app.AppCompatActivity;

public class PatientDashboard extends AppCompatActivity {


private Button profile_btn;
private Button viewDoc_btn;
private Button view_message_btn;
private Button view_appointment_btn;
private Button log_out_btn;
private ImageButton sidebar_btn;



@Override
    protected void onCreate(Bundle savedInstanceState){
      super.onCreate(savedInstanceState);
      setContentView(R.layout.dashboard_patient);
                view_appointment_btn = (Button) findViewById(R.id.btn_view);
                profile_btn = (Button) findViewById(R.id.profile);
                viewDoc_btn = (Button) findViewById(R.id.doctor_btn);
                log_out_btn = (Button) findViewById(R.id.log_out);
                view_message_btn = (Button) findViewById(R.id.viewmessage_btn);
                sidebar_btn = (ImageButton) findViewById(R.id.side_bar);

                view_appointment_btn.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
              Intent intent = new Intent(PatientDashboard.this, ViewAppointment.class);
                startActivity(intent);
                finish();


                log_out_btn.setOnClickListener(new View.OnClickListener() {
                    @Override
                    public void onClick(View v) {
                        Intent intent = new Intent(PatientDashboard.this, StartActivity.class);
                        startActivity(intent);
                        finish(); }
                });
                }
                });

                //This is for viewing the list of doctor's available in your area.

              //viewDoc_btn.setOnClickListener(new View.OnClickListener() {
                  //@Override
                  //public void onClick(View v) {
                      //Intent intent = new Intent (PatientDashboard.this, ViewDoctor.class);
                    //  startActivity(intent);
                  //    finish();
                //  }
              //});

              view_message_btn.setOnClickListener(new View.OnClickListener() {
                  @Override
                  public void onClick (View v) {
                      Intent intent = new Intent (PatientDashboard.this, MainActivity.class);
                      startActivity(intent);
                     finish();
                  }

              });

              //Viewing your profile

              //profile_btn.setOnClickListener(new View.OnClickListener() {
                //  @Override
                  //public void onClick(View v) {
                    //  Intent intent = new Intent (PatientDashboard.this, Profile.class);
                     // startActivity(intent);
                     // finish();
                  //}
              //});
}}








